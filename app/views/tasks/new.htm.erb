<div class="container">
  <h1>New task</h1>
  <%= form_for(@task) do |f| %>
    <div class="form-group">
      <strong><%= f.label :title %></strong>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <strong><%= f.label :details %></strong>
      <%= f.text_field :details, class: 'form-control' %>
    </div>

    <div class="input"><%= f.submit class: 'btn btn-primary' %></div>
  <% end %>
  <div class="border-top">
    <div class="back-link">
      <input class="fas fa-redo"></input><span><%= link_to "Back to list", tasks_path %></span>
    </div>
  </div>
</div>
