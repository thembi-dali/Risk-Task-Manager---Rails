<div class="container">
  <h1>Edit task</h1>
  <%= form_for(@task) do |f| %>
    <div class="form-group">
      <strong><%= f.label :title %></strong>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <strong><%= f.label :detail %></strong>
      <%= f.text_field :detail, class: 'form-control' %>
    </div>

    <div class="form-check">
      <%= f.check_box :completed, class: 'form-check-input' %>
      <%= f.label :completed, "Done", class: 'form-check-label' %></span>
    </div>

    <div class="input"><%= f.submit class: 'btn btn-primary' %></div>
  <% end %>
  <div class="border-top">
    <div class="back-link">
      <input class="fas fa-redo"></input><span><%= link_to "Back to list", tasks_path %></span>
    </div>
  </div>
</div>
